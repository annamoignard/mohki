<div>
    <% if @listing.errors.any? %>
      <%= @listing.errors.full_messages %> 
    <% end %>
    
    <%= form_with model: @listing, local: true do |f| %>
    <div class="form-group">
      <p>Name: <%= f.text_area :name, class: 'form-control', placeholder: 'Name' %></p>
    </div>

    <div class="form-group">
      <p>Description: <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %></p>
    </div>

    <div class="form-group">
      <p>Price: $ <%= f.number_field :price, class: 'form-control' %> </p>
    </div>

    <div class="form-group">
      <p>Eco Score: (1 - 5) <%= f.number_field :eco_rating, {min: 1, max: 5} %></p>
    </div>

    <div class="form-group">
      <p>Cetegory:  <%= f.select :category, options_for_select(Listing.categories.keys), class: 'form-control' %> 
    </div>

    <div class="form-group">
      <p>Product Image: <%= f.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %></p>
    </div>

    <%= f.submit id: "Post!", class: "btn btn-primary" %>
    <% end %>
</div> 