<%= render 'shared/devisenavbar'%>

<h1>Brands</h1>
<div class="row">
  <%  @brands.each do |brand| %>
    <div class="col-sm-4 my-2">
        <div class="card h-100" style="width: 18rem;" >
        <%= image_tag brand.picture, class: "card-img-top" if brand.picture.attached? %>
        <div class= "card-body" >
        <p><%= brand.name%></p>
        <p> <%= description_display(brand.speciality) %></p>
      </div>
      <div class="card-body">
      <%= link_to "View Brand", brand_path(brand.id)  %>
      </div>
    </div>
    </div>
  <% end %>
</div>

<h1>Products</h1>
<div class="row">
<% @listings.each do |listing| %>
<div class="col-sm-4 my-2">
    <div class="card h-100" style="width: 18rem;" >
    <%= image_tag listing.picture, class: "card-img-top" if listing.picture.attached? %>
    <div class= "card-body" >
<p><%= listing.name%></p>
<p>$ <%= listing.price %></p>
<p>Eco Stars: <%= '⭐️' * listing.eco_rating %></p>
</div>
      <div class="card-body">
      <%= link_to "View Product", listing_path(listing.id)  %>
      </div>
</div>
</div>
<% end %>
</div>

