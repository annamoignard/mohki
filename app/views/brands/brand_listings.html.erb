<%= render "shared/devisenavbar" %>
<h1><%= @brand.name %></h1>

<% @brand.listings.each do |listing| %> 
<div class="card" style="width: 18rem;">
    <%= image_tag listing.picture, class: "card-img-top" if listing.picture.attached? %>
  <div class="card-body">
    <h5 class="card-title"><%= listing.name %></h5>
    <p>$ <%= listing.price %></p>
    <p>Eco Stars: <%= '⭐️' * listing.eco_rating %></p>
    <p class="card-text"></p>
    <button data-stripe="payment", id="stripe", class="btn btn-success">Purchase</button>
    <%= javascript_pack_tag "stripe" %>
  </div>
</div>
<%end %> 
<%= link_to "Back", brands_path, class: "btn-primary back-link", type: "button" %> 

