<%= render "shared/devisenavbar" %>
<h1><%= @brand.name %></h1>
 

  <% if user_signed_in? && current_user.brand == @brand %> 
    <%= link_to "Delete Brand Profile", brand_path(@brand.id), :method => :delete %>
    <%= link_to 'Edit Brand Profile', edit_brand_path %>
  <% end %> 

<h2>Products</h2>
<% @brand.listings.each do |listing| %> 
<div class="card" style="width: 18rem;">
    <%= image_tag listing.picture, class: "card-img-top" if listing.picture.attached? %>
  <div class="card-body">
    <h5 class="card-title"><%= listing.name %></h5>
    <p>$ <%= listing.price %></p>
    <p>Eco Stars: <%= '⭐️' * listing.eco_rating %></p>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <%= link_to "View Product", listing_path(listing.id), class: "btn btn-primary"%>
  </div>
</div>
<%end %> 
<%= link_to "Back", brands_path %> 